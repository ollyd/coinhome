<section class="wrapper-lg bg-highlight">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1>Property Data Input</h1>
                    <hr>
                    <%= form_for @property do |f| %>
                    <div class="form-group">
                        <%= f.label :style %>
                        <%= f.text_field :style, :class => "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :price %>
                        <%= f.text_field :price, :class => "form-control", :required => true %>
                    </div>
                    <div class="form-group">
                        <%= f.label :sqr_ft %>
                        <%= f.text_field :sqr_ft, :class => "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :bedrooms %>
                        <%= f.text_field :bedrooms, :class => "form-control", :required => true %>
                    </div>
                    <div class="form-group">
                        <%= f.label :bathrooms %>
                        <%= f.text_field :bathrooms, :class => "form-control", :required => true %>
                    </div>
                    <div class="form-group">
                        <%= f.label :garages %>
                        <%= f.text_field :garages, :class => "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :description %>
                        <%= f.text_area :description, :class => "form-control", :required => true %>
                    </div>
                    <div class="form-group">
                        <%= f.label :map_image %>
                        <%= f.text_field :map_image, :class => "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :date_listed %>
                        <%= f.text_field :date_listed, :class => "form-control" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :address_number %>
                        <%= f.text_field :address_number, :class => "form-control", :required => true %>
                    </div>
                    <div class="form-group">
                        <%= f.label :address_street %>
                        <%= f.text_field :address_street, :class => "form-control", :required => true %>
                    </div>
                    <div class="form-group">
                        <%= f.label :address_city %>
                        <%= f.text_field :address_city, :class => "form-control", :required => true %>
                    </div>
                    <div class="form-group">
                        <%= f.label :address_suburb %>
                        <%= f.text_field :address_suburb, :class => "form-control",:required => true %>
                    </div>
                    <div class="form-group">
                        <%= f.label :address_state %>
                        <%= f.text_field :address_state, :class => "form-control", :required => true %>
                    </div>
                    <div class="form-group">
                        <%= f.label :address_code %>
                        <%= f.text_field :address_code, :class => "form-control", :required => true %>
                    </div>
                    <div class="form-group">
                        <%= f.label :address_country %>
                        <%= f.text_field :address_country, :class => "form-control", :required => true %>
                    </div>
                  <!--   <div class="form-group">
                        <%#= f.label :sale_status %>
                        <%#= check_box_tag :sale_status, :class => "form-control" %>
                    </div> -->
                    <div class="form-group">
                        <%= f.select :user_id, User.all.map {|user| [user.name, user.id]}, :include_blank => true, :prompt => "Select Property Owner..." %>
                    </div>
                    <%= f.submit :class => "btn btn-info" %>
                <% end %>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>

