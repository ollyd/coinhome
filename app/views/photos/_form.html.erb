<section class="wrapper-lg bg-highlight">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3">
                <h1>Add/Edit Photos</h1>
                <h3>Please add at least one photo to your property listing</h3>
                <hr>
                <%= form_for @photo, :url => photos_path, :html => { :multipart => true } do |f| %>
                    <div class="form-group">
                        <%= f.label :photo1, 'Photo 1' %>
                        <%= f.url_field :photo1, :class => "form-control", :required => true %>
                    </div>

                    <div class="form-group">
                        <%= f.label :photo2, 'Photo 2' %>
                        <%= f.url_field :photo2, :class => "form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :photo3, 'Photo 3' %>
                        <%= f.url_field :photo3, :class => "form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :photo4, 'Photo 4' %>
                        <%= f.url_field :photo4, :class => "form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :photo5, 'Photo 5' %>
                        <%= f.url_field :photo5, :class => "form-control" %>
                    </div>

                    <div class="form-group">
                        <%= f.label :photo6, 'Photo 6' %>
                        <%= f.url_field :photo6, :class => "form-control" %>
                    </div>
                    <%= f.submit :class => "btn btn-info" %>
                <% end %>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>